@model CMS.Models.Memebership
@{
    ViewBag.Title = "Login";
}

<div class="wrapper" style="margin-top: 9%;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="inner-warpper text-center" id="formvalidate">
            <h2 class="title">Login to your account</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })



            <!--USerName-->
            <div class="input-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "palceholder" })
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>


            <!--Password-->
            <div class="input-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "palceholder" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

            </div>

            <input type="submit" value="Login" class="button" id="login" />

        </div>
    }

</div>